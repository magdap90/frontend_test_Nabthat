{
  "name": "my-project",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "sass-watch": "sass --no-source-map --watch src/css/main.scss public/css/main.css",
    "nodemon-watch": "nodemon index.js -e *",
    "uglify": "uglifyjs src/js/*.js -m -c -o public/js/main.js",
    "watch:js": "onchange \"src/js/**/*.js\" -- npm run uglify",
    "build": "npm-run-all --parallel sass-watch nodemon-watch uglify watch:js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "sass": "^1.77.8"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "uglify-js": "^3.18.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  }
}
